
<!-- work.html 가져옴-->
	<div id="work">
	<a class="close" href="#news">CLOSE</a>

		<div class="container">
			<div class="sixteen columns">
				<div id="cbp-fwslider" class="cbp-fwslider">
					<ul>
						<li><img src="<%= @post.image %>" alt="img02"/></li>

					</ul>
				</div>
			</div>	
			<div class="eight columns">
				<h3><%= @post.title %></h3>	
				<p class="border-padding"><%= @post.content %> </p>
				<!-- 댓글 -->
                <div class="comment">
                    <!-- 댓글 입력 -->
                    <% if user_signed_in? %>
                       
                        <form action="/posts/<%=@post.id%>/comments">
                            <input type="textarea" name="comment_body">
                            <input type="submit" value="등록">
                        </form>
                    <% end %>
                    <!-- 댓글 출력 -->
                    <% @post.comments.each do |comment| %>
                        <div class="body">
                
                        <%= link_to getNameById(comment.user_id), "/posts/mypage/#{comment.user_id}"%> :
                        <%= render_user_tag(comment.body) %>
                
                          <% if current_user.id == comment.user_id %>
                            <%= link_to "삭제", "/posts/#{@post.id}/comments/#{comment.id}"%>
                          <% end %>
                        </div>
                
                        
                        <hr>
                    <% end %> <!--  comment each do-->
                </div> <!-- div-comment -->
                
                <a class="inner-button-works" href="/posts/<%= @post.id %>" data-method="delete">글 삭제</a>    
			</div>
			
			<div class="eight columns">
				<div id="cbp-qtrotator" class="cbp-qtrotator">
					<div class="cbp-qtcontent">
						<img src="<%= @user.image %>" alt="img01" />
						<blockquote>
						  <p><em><%= @user.introduction %></em></p>
						  <footer><%= @user.name %></footer>
						</blockquote>
					</div>
				</div>
			</div>	
		</div>
	</div>
<!-- 여기까지-->